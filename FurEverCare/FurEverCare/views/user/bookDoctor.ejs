<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/styles.css">
  <title>Book Doctor</title>
</head>
<body>
  <%- include('../partials/navbar', { title: 'Book Doctor' }) %>

  <main class="container">
    <h1>Book Doctor</h1>
    <% if (doctors.length > 0) { %>
      <form action="/user/book-doctor" method="POST" class="form">
        <div class="form-group">
          <label for="doctorId">Doctor</label>
          <select name="doctorId" id="doctorId" required>
            <% doctors.forEach(doctor => { %>
              <option value="<%= doctor._id %>"><%= doctor.username %> - <%= doctor.specialty %></option>
            <% }) %>
          </select>
        </div>
        <div class="form-group">
          <label for="date">Date</label>
          <input type="date" name="date" id="date" required>
        </div>
        <button type="submit" class="btn">Book Appointment</button>
      </form>
    <% } else { %>
      <p>No approved doctors available at the moment.</p>
    <% } %>
  </main>

  <%- include('../partials/footer') %>
</body>
</html>
